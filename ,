#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите двузначное число: ";
    cin >> number;

    // Извлекаем десятки и единицы
    int tens = number / 10;
    int ones = number % 10;

    // Сумма цифр
    int sum = tens + ones;

    // Проверка кратности 3
    if (sum % 3 == 0) {
        cout << "Сумма цифр числа кратна 3." << endl;
    } else {
        cout << "Сумма цифр числа не кратна 3." << endl;
    }

    return 0;
}
.
#include <iostream>
using namespace std;

int main() {
    int A, num;
    
    // Ввод числа A и двузначного числа
    cout << "Введите число A: ";
    cin >> A;
    
    cout << "Введите двузначное число: ";
    cin >> num;

    // Вычисляем сумму цифр двузначного числа
    int sum_of_digits = (num / 10) + (num % 10);
    
    // Проверяем, кратна ли сумма цифр числу A
    if (sum_of_digits % A == 0) {
        cout << "Сумма цифр числа " << num << " кратна числу " << A << endl;
    } else {
        cout << "Сумма цифр числа " << num << " не кратна числу " << A << endl;
    }

    return 0;
}
