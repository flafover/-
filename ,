#include <iostream>

using namespace std;

int main() {
    int number;
    
    // Вводим двузначное число
    cout << "Введите двузначное число: ";
    cin >> number;

    // Разделяем число на цифры
    int first_digit = number / 10;  // Первая цифра
    int second_digit = number % 10; // Вторая цифра

    // Сравниваем цифры
    if (first_digit > second_digit) {
        cout << "Первая цифра больше второй." << endl;
    } else if (first_digit < second_digit) {
        cout << "Вторая цифра больше первой." << endl;
    } else {
        cout << "Цифры равны." << endl;
    }

    return 0;
}
.
#include <iostream>

int main() {
    int number;
    
    // Вводим двузначное число
    std::cout << "Введите двузначное число: ";
    std::cin >> number;
    
    // Извлекаем десятки и единицы
    int tens = number / 10;  // десятки
    int ones = number % 10;  // единицы
    
    // Проверяем, одинаковы ли цифры
    if (tens == ones) {
        std::cout << "Цифры одинаковы." << std::endl;
    } else {
        std::cout << "Цифры разные." << std::endl;
    }
    
    return 0;
}
.
#include <iostream>

using namespace std;

int main() {
    int number;

    // Ввод числа
    cout << "Введите двузначное число: ";
    cin >> number;

    // Разделяем число на десятки и единицы
    int tens = number / 10;  // Цифра десятков
    int ones = number % 10;  // Цифра единиц

    // Считаем сумму цифр
    int sum = tens + ones;

    // Проверяем, является ли сумма цифр четной
    if (sum % 2 == 0) {
        cout << "Сумма цифр числа четная." << endl;
    } else {
        cout << "Сумма цифр числа нечетная." << endl;
    }

    return 0;
}
.
#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите двузначное число: ";
    cin >> number;

    // Получаем десятки и единицы числа
    int tens = number / 10;
    int ones = number % 10;

    // Суммируем цифры
    int sum = tens + ones;

    // Проверяем, является ли сумма нечетной
    if (sum % 2 != 0) {
        cout << "Сумма цифр нечетная." << endl;
    } else {
        cout << "Сумма цифр четная." << endl;
    }

    return 0;
}
