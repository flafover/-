#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите целое число: ";
    cin >> number;

    if (number % 2 != 0) {
        cout << "Число нечетное." << endl;
    } else {
        cout << "Число четное." << endl;
    }

    return 0;
}
