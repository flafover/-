#include <iostream>
using namespace std;

int main() {
    // Внешний цикл для строк
    for (int i = 1; i <= 5; i++) {
        // Внутренний цикл для вывода чисел
        for (int j = 1; j <= i; j++) {
            cout << i << " "; // Выводим число i
        }
        cout << endl; // Переход на новую строку после каждой итерации внешнего цикла
    }

    return 0;
}
.
#include <iostream>
using namespace std;

int main() {
    // Массив чисел, которые будут выводиться
    int numbers[] = {8, 7, 6, 5, 4};
    
    // Внешний цикл для чисел
    for (int i = 0; i < 5; ++i) {
        // Внутренний цикл для вывода каждого числа в соответствующее количество раз
        for (int j = 0; j < 5 - i; ++j) {
            cout << numbers[i] << " ";
        }
        cout << endl; // Переход на новую строку после каждого ряда чисел
    }

    return 0;
}
.
#include <iostream>
using namespace std;

int main() {
    // Внешний цикл для каждой строки
    for (int i = 1; i <= 5; ++i) {
        // Внутренний цикл для вывода чисел в каждой строке
        for (int j = 1; j <= i; ++j) {
            cout << j << " ";
        }
        cout << endl; // Переход на новую строку
    }
    return 0;
}
.
#include <iostream>
using namespace std;

int main() {
    for (int i = 1; i <= 5; ++i) { // Внешний цикл для строк
        for (int j = i; j >= 1; --j) { // Внутренний цикл для чисел в строке
            cout << j << "\t"; // Выводим число, табуляция между числами
        }
        cout << endl; // Переход на новую строку после каждой строки чисел
    }
    return 0;
}
