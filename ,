#include <iostream>

int main() {
    int number;

    std::cout << "Введите целое число: ";
    std::cin >> number;

    if (number % 2 == 0) {
        std::cout << "Число чётное." << std::endl;
    } else {
        std::cout << "Число нечётное." << std::endl;
    }

    return 0;
}
#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите целое число: ";
    cin >> number;

    if (abs(number) % 10 == 7) {
        cout << "Число оканчивается на 7." << endl;
    } else {
        cout << "Число не оканчивается на 7." << endl;
    }

    return 0;
}
