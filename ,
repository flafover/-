#include <iostream>
using namespace std;

int main() {
    int M, N;
    cout << "Введите число M: ";
    cin >> M;
    cout << "Введите число N: ";
    cin >> N;

    if (N != 0) {
        if (M % N == 0) {
            cout << "Частное от деления M на N: " << M / N << endl;
        } else {
            cout << "M на N нацело не делится" << endl;
        }
    } else {
        cout << "На 0 делить нельзя!" << endl;
    }

    return 0;
}
