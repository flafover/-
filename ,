#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите трехзначное число: ";
    cin >> number;

    // Получаем первую цифру числа
    int first_digit = number / 100;
    
    // Получаем последнюю цифру числа
    int last_digit = number % 10;

    // Сравниваем первую и последнюю цифры
    if (first_digit > last_digit) {
        cout << "Первая цифра больше последней." << endl;
    } else if (first_digit < last_digit) {
        cout << "Последняя цифра больше первой." << endl;
    } else {
        cout << "Первая и последняя цифры равны." << endl;
    }

    return 0;
}
