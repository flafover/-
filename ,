#include <iostream>
using namespace std;

int main() {
    int A, B;
    
    // Ввод диапазона
    cout << "Введите A: ";
    cin >> A;
    cout << "Введите B: ";
    cin >> B;
    
    // Проход по диапазону от A до B
    for (int i = A; i <= B; i++) {
        // Проверяем, если последняя цифра числа четная
        if (i % 10 == 0 || i % 10 == 2 || i % 10 == 4 || i % 10 == 6 || i % 10 == 8) {
            cout << i << endl;  // Выводим число
        }
    }

    return 0;
}
