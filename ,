#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите число: ";
    cin >> number;

    // Проверка последней цифры
    if (number % 10 == 5) {
        cout << "Число оканчивается на 5." << endl;
    } else {
        cout << "Число не оканчивается на 5." << endl;
    }

    return 0;
}
