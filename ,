#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите трехзначное число: ";
    cin >> number;

    // Извлекаем первую и вторую цифры числа
    int first_digit = number / 100;          // Первая цифра
    int second_digit = (number / 10) % 10;   // Вторая цифра

    // Сравниваем первую и вторую цифры
    if (first_digit > second_digit) {
        cout << "Первая цифра больше второй." << endl;
    } else if (first_digit < second_digit) {
        cout << "Вторая цифра больше первой." << endl;
    } else {
        cout << "Первая и вторая цифры равны." << endl;
    }

    return 0;
}
